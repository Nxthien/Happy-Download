<div class="row">
  <div class="col-md-4">
    <div class="thumbnail"><%= image_tag product.image_product.url %></div>
    <h3><%= number_to_currency product.price %></h3>
  </div>
  <div class="col-md-8">
    <%= form_for [product, order_detail] do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <%= f.hidden_field :seller_id, value: product.user.id %>
      <%= f.hidden_field :buyer_id, value: current_user.id %>
      <%= f.hidden_field :product_id, value: product.id %>
      <div class="actions">
        <%= f.submit t("submit") %>
      </div>
    <% end %>
  </div>
</div>
